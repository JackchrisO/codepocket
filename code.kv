#:kivy 2.1.0

<Manager>:
    HomeScreen:
        name: "home"
    CodeScreen:
        name: "code"

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: "10dp"
            spacing: "10dp"

            TextInput:
                id: busca
                hint_text: "Pesquisar..."
                multiline: False
                on_text: root.busca = self.text; app.load_buttons()

        ScrollView:
            GridLayout:
                id: grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "10dp"

<CodeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        BoxLayout:
            size_hint_y: None
            height: "60dp"
            spacing: "10dp"

            Button:
                text: "Voltar"
                on_release: app.sm.current = "home"

            Label:
                text: root.titulo
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

        ScrollView:
            Label:
                text: root.codigo
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
